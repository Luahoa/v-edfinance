# ========================================
# Package Manager Configuration
# ========================================
# This project uses pnpm@9.15.0 as the package manager
# All team members MUST use pnpm instead of npm or yarn

# Enforce pnpm usage - blocks npm/yarn commands
engine-strict=true

# Save exact versions (no ^ or ~) for predictability
save-exact=true

# Prevent npm package-lock.json creation
package-lock=false

# Strict peer dependency resolution
strict-peer-dependencies=true

# Auto-install peer dependencies
auto-install-peers=true

# Use workspace protocol for monorepo dependencies
link-workspace-packages=true

# ========================================
# CI/CD Configuration
# ========================================
# Frozen lockfile in CI - fails if lockfile is out of sync
# Set this via command flag in CI: pnpm install --frozen-lockfile

# ========================================
# Performance Optimizations
# ========================================
# Use a single global store
store-dir=~/.pnpm-store

# Enable side-effects cache
side-effects-cache=true

# Network settings
network-timeout=60000
fetch-retries=3
