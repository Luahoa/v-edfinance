# =================================================================
# V-EdFinance Environment Variables - Complete Template
# =================================================================
# Copy to .env and fill in values
# =================================================================

# -----------------------------------------------------------------
# 1. DATABASE (PostgreSQL)
# -----------------------------------------------------------------
# Main database connection
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/vedfinance_dev?schema=public"

# PostgreSQL password (used in dokploy.yaml)
POSTGRES_PASSWORD="YOUR_SECURE_PASSWORD_HERE"

# Test database (for running tests)
TEST_DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/vedfinance_test?schema=public"

# -----------------------------------------------------------------
# 2. REDIS (Cache)
# -----------------------------------------------------------------
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_TTL="3600"
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------
# 3. JWT AUTHENTICATION
# -----------------------------------------------------------------
# Development environment
JWT_SECRET_DEV="dev-jwt-secret-min-32-chars-random-string-here"

# Staging environment
JWT_SECRET_STAGING="staging-jwt-secret-min-32-chars-random-string-here"

# Production environment
JWT_SECRET_PROD="prod-jwt-secret-min-32-chars-random-string-here"
JWT_REFRESH_SECRET_PROD="prod-refresh-secret-min-32-chars-random-string-here"

# Default (for local dev)
JWT_SECRET="dev-jwt-secret-min-32-chars-random-string-here"

# -----------------------------------------------------------------
# 4. ENCRYPTION (Production)
# -----------------------------------------------------------------
ENCRYPTION_KEY_PROD="prod-encryption-key-min-32-chars-random-string"

# -----------------------------------------------------------------
# 5. CLOUDFLARE R2 STORAGE
# -----------------------------------------------------------------
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="v-edfinance-uploads"

# R2 endpoint (auto-generated from account ID)
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"

# Public URL for uploaded files
R2_PUBLIC_URL="https://your-bucket.your-account.r2.dev"

# -----------------------------------------------------------------
# 6. STORAGE DRIVER (Unstorage)
# -----------------------------------------------------------------
# Options: 'fs' (local filesystem), 'r2' (Cloudflare R2), 'gcs' (Google Cloud)
STORAGE_DRIVER="r2"

# Local filesystem storage (for development)
STORAGE_FS_BASE="./uploads"

# Google Cloud Storage (if using GCS)
GCS_BUCKET_URL=""
GCS_ACCESS_TOKEN=""
GCS_PUBLIC_URL=""

# -----------------------------------------------------------------
# 7. AI SERVICES (Google Gemini)
# -----------------------------------------------------------------
GEMINI_API_KEY="your-google-gemini-api-key"

# -----------------------------------------------------------------
# 8. APPLICATION SETTINGS
# -----------------------------------------------------------------
NODE_ENV="development"  # Options: development, staging, production
PORT="3001"

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3002"

# Web application base URL (for social sharing)
WEB_BASE_URL="http://localhost:3000"

# -----------------------------------------------------------------
# 9. MONITORING (Grafana)
# -----------------------------------------------------------------
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASSWORD="your-secure-grafana-password"

# Netdata (optional - for claiming to Netdata Cloud)
NETDATA_CLAIM_TOKEN=""
NETDATA_CLAIM_ROOMS=""

# Beszel Agent (monitoring)
BESZEL_AGENT_KEY="change-this-to-secure-key"

# -----------------------------------------------------------------
# 10. DEPLOYMENT (VPS)
# -----------------------------------------------------------------
# VPS SSH connection
VPS_HOST="103.54.153.248"
VPS_USER="root"
VPS_SSH_KEY_PATH="C:/Users/luaho/.ssh/id_ed25519"

