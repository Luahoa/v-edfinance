# Kamal Production Environment Variables
# Store in .kamal/.env (NOT committed to git)

# Docker Registry (GitHub Container Registry)
KAMAL_REGISTRY_PASSWORD=ghp_your_github_personal_access_token_here

# PostgreSQL
POSTGRES_PASSWORD=super_secure_production_password_here

# Database URL (adjust with your DB server IP)
DATABASE_URL=postgresql://postgres:super_secure_production_password_here@192.168.1.11:5432/vedfinance_production?schema=public&connection_limit=10

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=production_jwt_secret_32_chars_minimum_here
JWT_REFRESH_SECRET=production_refresh_secret_32_chars_minimum

# Redis
REDIS_URL=redis://192.168.1.11:6379

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_cloudflare_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=v-edfinance-production

# Google AI
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Monitoring & Alerts
SENTRY_DSN=your_sentry_dsn_if_using
DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook

# Email Service (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
