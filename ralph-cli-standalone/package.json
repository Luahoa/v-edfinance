		"compile:binaries": "node scripts/build-binaries.js",
		"test": "echo \"No tests yet\"",
		"lint": "echo \"Lint skipped\"",
		"lint:fix": "echo \"Lint skipped\"",
		"format": "echo \"Format skipped\"",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"cli",
		"ralph-loop",
		"automation",
		"beads",
		"epic-management"
	],
	"author": "V-EdFinance",
	"license": "MIT",
	"engines": {
