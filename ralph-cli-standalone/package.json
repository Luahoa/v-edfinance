{
	"name": "@v-edfinance/ralph-cli",
	"version": "1.0.0",
	"description": "Ralph Loop CLI - Autonomous epic execution automation",
	"type": "module",
	"bin": {
		"ralph": "bin/ralph.js"
	},
	"files": [
		"bin/ralph.js",
		"dist/index.js"
	],
	"scripts": {
		"dev": "tsx src/index.ts",
		"build": "echo 'Build uses runtime transpilation - no build step needed'",
