		"node": ">=18.0.0"
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"cac": "^6.7.14",
		"cli-progress": "^3.12.0",
		"ora": "^8.0.0",
		"picocolors": "^1.1.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bun": "latest",
		"@types/cli-progress": "^3.11.6",
