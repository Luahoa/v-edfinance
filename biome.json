{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "warn",
                "noArrayIndexKey": "warn"
            },
            "style": {
                "useConst": "error",
                "useTemplate": "warn"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "es5"
        }
    },
    "json": {
        "formatter": {
            "enabled": true
        }
    },
    "files": {
        "ignoreUnknown": true,
        "ignore": [
            "node_modules",
            "dist",
            "build",
            ".next",
            ".turbo",
            "coverage",
            "playwright-report",
            "test-results",
            "*.config.js",
            "pnpm-lock.yaml"
        ]
    }
}